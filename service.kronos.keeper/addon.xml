<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.kronos.keeper"
       name="Kronos Keeper"
       version="8.0.0"
       provider-name="Kronos Team">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.service" library="service.py" start="startup"/>

    <extension point="xbmc.addon.metadata">
        <summary lang="en">Weekly file integrity check for corruption or damage</summary>
        <description lang="en">Kronos Keeper runs smart corruption detection for your files, notifying you silently on errors or confirming all is well. No playback interruption.</description>
        <platform>all</platform>
		<assets>
            <icon>resources/media/k_logo.png</icon>
        </assets>
    </extension>
</addon>